@model UserRoleViewModel
@{
    ViewData["Title"] = "ManageRoles";
}
<form method="post" asp-action="ManageRoles">
    <div class="card mt-4">
    <div class="card-header">
        <h2>@Model.UserName<</h2>
        Add/remove Roles

    </div>
    <div class="card-body">
        <input type="hidden" asp-for="UserId"/>
            @for (int i=0;i<Model.Roles.Count;i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName"/>
                    <input class="form-check-input" asp-for="@Model.Roles[i].IsSelected"/>
                    <lable class="form-check-lable" asp-for="@Model.Roles[i].IsSelected">
                        @Model.Roles[i].RoleName
                    </lable>
                </div>

            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    </div>
</form>
<a asp-controller="Users" asp-action="Index" class="btn btn-secondary">Cancel</a>
